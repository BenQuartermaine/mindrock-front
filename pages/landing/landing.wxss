.banner {
  color: white;
  text-align: center;
  height: 70vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size:cover; 
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
}
.content h1 {
  color: rgb(3, 117, 133);
  font-size: 50px;
  font-weight: bold;
  text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
  text-align: center;
}
.content text {
  font-size: 25px;
  font-weight: lighter;
  color:black;
  opacity: 0.6;
  margin-bottom: 30px;
}
.btn {
  background-color: rgb(3, 117, 133);
  color: white;
  height: 40px;
  width: 200px;
  border-radius: 5px;
  text-align: center;
}