<view class="header">
 <text class="header">7 Day {{challenge.name}} Challenge</text>
</view>
 
<view class="container">
  <image class="pic" src="{{photo[0]}}"></image>
  <view class="{{showExpand? 'des-section-long': 'des-section'}}">
    <view class="row">
      <view class="des-title">Description</view>
      <image class="dropdown" src="{{showExpand? '/img/min-bl.svg' : '/img/max-bl.svg'}}" bindtap="expand"></image>
    </view>
    <view class="{{showExpand? 'des-details-long': 'des-details'}}">
    <textarea>{{challenge.description}}</textarea>

    </view>
  </view>
  <view wx:if="{{challenge_list.length > 0}}">
    <text>You've already got a challenge!</text>
    <button bindtap='NavigateToDashboard'>Go to Challenge</button>
  </view>
  <view wx:else>

    <text>How to take the challenge</text>
    <button bindtap='clickToDash'>Accepet Challenge by Yourself</button>
  </view>
   <button bindtap='createTeam'>Create a Team for this Challenge</button>  

</view>
</view>
