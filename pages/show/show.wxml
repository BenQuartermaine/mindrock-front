<image class="pic" src="{{photo[0]}}">
</image>
<view class="container">
  <view>
    <view class='difficulty-tag'>Hard</view>
  </view>
  <view class="header">
    <view>
      <text class="">7 Day {{challenge.name}} Challenge</text>
    </view>
  </view>

  <view class='des-section'>
    <view class="row">
      <view class="des-title">Description</view>
    </view>
    <textarea class='description-textarea'>{{challenge.description}}</textarea>
  </view>

  <view wx:if="{{challenge_dash.length > 0}}">
    <view class='state-text'>
      <text>You've already got a personal challenge!</text>
    </view>
  </view>
  <view wx:else>
    <view class='button-alignment'>
      <button bindtap='clickToDash'>Accept this Challenge!</button>
    </view>
  </view>

  <view wx:if="{{challenge_team.length > 0}}">
    <view class='state-text'>
      <text>You've already got a team challenge!</text>
    </view>
  </view>
  <view wx:else>
    <view class='button-alignment'>
      <button bindtap='createTeam'>Create a Team!</button>
    </view>
  </view>
  <view wx:if="{{challenge_team.length > 0 || challenge_dass.length >0 }}">
    <button bindtap='NavigateToDashboard'>Go to Challenge</button>
  </view>
</view>