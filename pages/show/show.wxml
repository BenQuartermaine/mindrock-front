<image class="pic" src="{{photo[0]}}">
</image>
<view class="container">
  <view>
    <view class='difficulty-tag'>Hard</view>
  </view>
  <view class="header">
    <view>
      <text class="">7 Day {{challenge.name}} Challenge</text>
    </view>
  </view>

  <view class='des-section'>
    <view class="row">
      <view class="des-title">Description</view>
    </view>
    <textarea class='description-textarea'>{{challenge.description}}</textarea>
  </view>
  <view wx:if="{{challenge_list.length > 0}}">
    <view class='state-text'>
      <text>You've already got a challenge!</text>
    </view>
    <button bindtap='NavigateToDashboard'>Go to Challenge</button>
  </view>
  <view wx:else>
    <view class='state-text'>
      <text>How would you like to take the challenge?</text>
    </view>
    <view class='button-alignment'>
      <button bindtap='clickToDash'>Individual</button>
      <button bindtap='createTeam'>Team</button>
    </view>
  </view>
</view>