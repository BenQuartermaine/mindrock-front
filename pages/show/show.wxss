@import '/style/fonts.wxss';
.container{
  padding-top:20rpx;
}

.header {
  position: absolute;
  top: 60rpx;
  left: 50rpx;
  font-size: 48rpx;
  font-family: 'Gotham';
}

.pic {
  border-radius: 20px 20px 0px 0px;
  margin-top: 90rpx;
  width: 100vw;
}
.des-title{
  font-family: 'Gotham';
  font-size:30rpx;
  font-weight: 300;
  font-style: normal;
}
.challenge-name{
  margin-top:30rpx;
}

.row{
  display: flex;
  justify-content: space-between;
  padding:15rpx;
}
.des-section {
  height: 300rpx;
  margin: 50rpx 0 30rpx 0;
  width:96%;
  border: 1px solid lightgrey;
  /* overflow: hidden; */
  border-radius: 10rpx;
  box-shadow: 0px -1px 2px rgba(0, 0, 0, 0.25);
}

.des-section-long {
  height: 580rpx;
  margin: 30rpx 0 30rpx 0;
  width:90%;
  border: 1px solid lightgrey;
  }

  .des-details {
  font-size: 24rpx;
  line-height: 30rpx;
  padding: 20rpx;
  /* overflow: hidden; */
  height:160rpx;
  display: block;
  overflow-wrap:break-word;
  overflow:hidden;
  }

  .des-details-long {
  font-size: 24rpx;
  line-height: 30rpx;
  padding: 20rpx;
  height:300rpx;
  display: block;
  overflow-wrap:break-word;
  }
 

button{
  width:700rpx;
  border-radius: 8rpx;
  line-height:2.55555556;
  color:#327383;
  font-size: 12px;
  margin-top: 60rpx;
  margin-bottom: 60rpx; 
  border: 1rpx solid #327383;
  box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.25);
  text-align:center;
  font-family: 'Gotham';
  font-weight: 300;
  font-style: normal;
}

.dropdown{
  width:5%;
  height:30rpx;
  position: absolute;
  top: 640rpx;
  right: 38rpx;
}

