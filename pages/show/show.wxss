@import '/style/fonts.wxss';

.container{
  padding: 0rpx;
  background: #FFFFFF;
  /* border: 1px solid lightgrey; */
  box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.25);
  border-radius: 0px 0px 20px 20px;

}

.header {
 font-size: 40rpx;
 font-family: 'Gotham';
 padding: 30rpx;
 display: flex;
 flex-direction: column;
 justify-content: center;
 align-items: center;
 height: 150rpx;
}
.header-inline {
  padding: 30rpx;
  font-weight: bold;
}
.pic {
  width: 100vw;
  height: 30vh;
  box-shadow: 2px -2px 2px rgba(0, 0, 0, 0.25);
  border-radius: 20px 20px 0px 0px;
  margin-top: 10rpx;
}
.des-title{
  font-family: 'Gotham';
  font-size:25rpx;
  padding-top:30rpx;
  padding-left: 15rpx;
  font-weight: bold;
}
.challenge-name {
  margin-top:30rpx;
}
.des-section {
  height: 200rpx;
  margin: 50rpx 0 30rpx 0;
  width: 98%;
  border: 1px solid lightgrey;
  border-radius: 10rpx;
  box-shadow: 0px -1px 2px rgba(0, 0, 0, 0.25);
}
.des-details {
font-size: 24rpx;
line-height: 30rpx;
padding: 20rpx;
height:160rpx;
display: block;
overflow-wrap:break-word;
overflow:hidden;
}
button {
  border-radius: 8rpx;
  color:#327383;
  font-size: 22rpx;
  border: 1rpx solid #327383;
  box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.25);
  text-align: center;
  width: 40vw;
  padding: 10rpx;
  background: transparent;
  font-weight: bold;
  margin-bottom: 30rpx;

}
.instruction {
  font-family: 'Gotham';
  font-weight: 200;
  font-style: normal;
  padding-top: 40rpx;
  font-size: 30rpx;
}
.difficulty-tag {
  color: white;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 30rpx;
  width: 120rpx;
  text-align: center;
}
.button-alignment {
  display: flex;
}
.state-text {
  width: 600rpx;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}
.description-textarea {
  padding-left:20rpx;
  padding-top:20rpx;
  font-size:30rpx;
  line-height:40rpx;
  width:96vw;
}
.view-challenge {
  padding: 20rpx 20rpx 10rpx 20rpx;
}