<view class='head-wrapper'>
  <view class="title">My journals</view>
  <view class= 'head-container'>
    <view class="personal-info">
      <image class='avatar' src="{{avatar}}"/>
      <view class="total">You have 22 journals!!</view>
     </view>
    <view class="journal-container">
      <view class="row">
        <view class="date">2018.12.03</view>
        <image id='icon' src="/img/calendar.png" bindtap="showCalendar"></image>
      </view>

      <block wx:if="{{calendar_show}}">
        <view class="calendar-wrap">
          <template is="calendar" data="{{...calendar}}" />
        </view>
      </block>

      <view class= "content-row">
        <image id="pic" src="/img/1.jpg"></image>
        <view class="{{showExpand? 'summary-long': 'summary'}}">
          <image class="dropdown" src="{{showExpand? '/img/min-bl.svg' : '/img/max-bl.svg'}}" bindtap="expand"></image>
          <textarea>{{challenge.description}}</textarea>
      
    
      
