@import '/style/fonts.wxss';

.title{
  font-family: 'Gotham';
  margin: 80rpx 0;
}

.avatar {
  display: flex;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 50rpx;
  margin-left:30rpx;
}

.personal-info{
  display: flex;
  justify-content: center;
  font-family: 'Gotham';
  font-weight: 300;
  font-style: normal;
  font-size: 28rpx;
}

.content{
  display: flex;
  
}
.head-container{
  background: #FFFFFF;
  border: 1px solid #E7E7E7;
  border-top: none;
  border-radius: 8px;
  width:95vw;
  margin: 0 auto;
}

.journal-container{
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
  border: 1px solid #E7E7E7;
  border-top: none;
  border-radius: 5px;
  width: 95vw;
  margin: 0 auto;
  margin-bottom: 30rpx;
  overflow:hidden;
  height: 100vh;
}

.row{
display: flex;
justify-content: space-between;
margin-top:25rpx;
}
#icon {
  display: flex;
  width: 50rpx;
  height:50rpx;
  
}

.content-row{
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.images {
  display: flex;
  height:500rpx;
}
.date{
  display:flex;
  font-weight: 300;
  font-style: normal;
  font-size: 28rpx;

}
#pic{
  display:flex;
  width: 100%;
  margin-top:20rpx;
}
.images{
  background: #FFFFFF;
  border: 1px solid #E7E7E7;
  border-top: none;
  border-radius: 5px;

}

.content{
  background: #FFFFFF;
  border: 1px solid #E7E7E7;
  border-top: none;
  border-radius: 5px;

}

.summary{
  font-family: 'Gotham';
  font-weight: 300;
  font-style: normal;
  font-size: 28rpx;
  margin-top:40rpx;
  padding:20rpx;
}