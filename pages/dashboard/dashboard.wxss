@import '/style/fonts.wxss';

.head-wrapper {
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.history-header {
  margin: 10rpx 10rpx 10rpx 20rpx;
  background-color:#F6F6F6;
  width: 92vw;
  padding: 10rpx;
  border-radius: 10rpx;
}
.dashboard-avatar {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  margin-right: 50rpx;
  margin-left:30rpx;
  margin-top: 30rpx;
}
.head {
  margin-top: 30rpx;
}
.current {
  padding:15rpx;
  font-size:25rpx;
  font-family: 'Gotham';
  font-weight: 300;
  font-style: normal;
  
}
.number{
 padding-top:30rpx;
 padding-left:20rpx;
 font-size:20rpx;
 margin-left: 20rpx;
 display: flex;
 font-family: 'Gotham';
}
 #toggle-sign {
  width: 25rpx;
  height: 25rpx;
} 
.challenge-wrapper {
  background: #FFFFFF;
  border: 1px solid #E7E7E7;
  border-top: none;
  margin: 0 auto;
  margin-bottom: 30rpx;
  overflow:hidden;
  height: auto;
  background: #FFFFFF;
  box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.25);
  border-radius: 0px 0px 20px 20px;
}
.challenge-wrapper-short {
  background: #FFFFFF;
  border: 1px solid #E7E7E7;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  height: 300rpx;
}
.day {
  display: flex;
  justify-content: space-between;
  margin: 15rpx 20rpx 15rpx 20rpx;
  background: #FFFFFF;
  border: 1px solid #E7E7E7;
  border-radius: 10rpx;
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.25);
  padding: 20rpx;
  font-size: 24rpx;
  font-family: 'Gotham';
  font-weight: 300;
  font-style: normal;
}
.day:last-child{
  margin-bottom: 25rpx;
}
.row{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #C4C4C4;
}
.row.last{
  margin-bottom: 40rpx;
}
.row.stats{
  background:#327383;
  border: 1px solid #327383;
  padding: 20rpx;
  color: white;
  box-shadow: 0px -3px 2px rgba(144, 144, 144, 0.25);
  border-radius: 20px 20px 0px 0px;
  font-family: 'Gotham';
  text-transform: capitalize;
  display: flex;
  align-items: center;
  height: 60rpx;
  width: 95%;
}

.status, .challenge-name{
  /* display:flex; */
  padding: 20rpx;
  font-size:25rpx;
  font-family: 'Gotham';
}
.dashboard-wrapper {
  padding-top: 20rpx;
}

.locked {
  width:40rpx;
  height: 40rpx;
  border-radius: 50%;
  padding-left:20rpx;
}

.description{
padding:20rpx;
font-size:25rpx;
overflow: hidden;
font-family: 'Gotham';
font-weight: 300;
font-style: normal;
}
.description-long{
height:300rpx;
overflow:hidden;
padding:20rpx;
font-size:25rpx;
}
/* Toggle button team & dashboard */
.active-class {
  color: black;
  border-bottom: 2rpx solid #565656;
  transition: 0.3s ease-in;
}
.mutual-class {
  padding: 10rpx;
  width: 180rpx;
  font-size: 30rpx;
  text-align: center;
}
.inactive-class {
  color: #E7E7E7;
}
.dashboardTeamToggle {
  display: flex;
  justify-content: center;
  padding: 10rpx;
}
.journal-show {
  color: #37529E;
  border: 2rpx solid #37529E;
  font-family: gotham;
  font-style: normal;
  font-weight: 300rpx;
  font-size: 22rpx;
}
/* Team Page css */
.team-wrapper {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #FFFFFF;
  box-shadow: 0px -3px 2px rgba(144, 144, 144, 0.25);
  border-radius: 20px 20px 0px 0px;
  border: 2rpx solid #E7E7E7;
}
.team-avatar {
  border-radius: 50%;
  height: 80rpx;
  width: 80rpx;
}
.avatar-width {
  width: 80rpx;
}
.team-locked {
  height: 50rpx;
  width: 50rpx;
}
.team-individual {
  align-items: center;
}
.assignment-team {
  position: relative;
  left: -140rpx;
  top: -20rpx;
}

.day-title {
  margin: 15rpx 20rpx 15rpx 20rpx;  
}

#share{
  height: 50rpx;
  background:transparent;
  border-color: #327383;
 
}
#share::after{
  border:none;
}


#share-sign{
  width: 50rpx;
  height: 50rpx;
}
.share-button{
  display: flex;
  align-items: center
}
.day-text{
  font-family: gotham;
  font-size: 25rpx;
}