@import '/style/fonts.wxss';
/* cards' styling */
.category{
 text-transform: capitalize;
 font-size: 35rpx;
 margin-bottom: 40rpx;
}

#name {
  margin: 35rpx;
  background-color: rgba(144, 144, 144, 0.08);
  border-radius: 30rpx;
  font-family: 'Gotham';
  font-size: 30rpx;
  padding:15rpx;
}
.card {
  border-radius: 50%;
  height: 200rpx;
  width:200rpx;
  color:rgba(0,0,0,0.8);
  margin:20rpx;
}
.image-size {
  height: 200rpx;
  width: 200rpx;
}
.card-category {
 font-size: 20rpx;
 color: black;
 font-weight: 300;
 font-style: normal;
 font-family: 'Gotham';
}
.index-header {
  font-weight: bold;
  font-size: 50rpx;
  text-align: center;
  margin-bottom: 20px;
  margin-top: 40px;
  font-family: 'Gotham'; 
}
.container {
  padding: 20rpx;
  background: #FFFFFF;
  box-shadow: 0px -3px 2px rgba(144, 144, 144, 0.25);
  border-radius: 20px 20px 0px 0px;
}
.scroll-view-container {
  width: 100vw;
  /* border: 1px solid black; */
  display: flex;
  overflow: auto;
  height: 300rpx;
}
.scroll-item {
  height: 25px;
  flex-shrink: 0;
}
.card-wrapper {
  display: flex;
  text-align: center;
}
.modules {
  background: #FFFFFF;
  box-sizing: border-box;
  border-radius: 6px;
  margin-bottom: 20px;
  box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.2);
}
.courage {
  color: #E83E30;
  padding: 10rpx;
}

.habit-building {
  color: #A0BE3E;
}

.creativity {
  color: #37529E;
}

.self-awareness {
  color: #D03979;
}

.communication {
  color: #F98B34;
}

.productivity {
  color: #91C4F2;
}