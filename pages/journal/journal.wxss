.header {
  margin: 10rpx 0 30rpx 25rpx;
}

.section {
  display: flex;
  flex-direction: column; 
  flex: wrap;
  justify-items: center; 
  background-color: #F6F6F6;
  border-radius: 10rpx;
  margin: 25rpx;
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.25);
}
.title {
  padding: 20rpx 20rpx 0rpx 20rpx;
}
input {
  /* height: 300rpx; */
  max-width: 95%;
  word-wrap: break-word;  
  word-break: normal;  
  padding: 10rpx 10rpx 0 20rpx;
 
}
.content {
  background-color: #FFFFFF;
  height: 300rpx;
}
.summary-tag {
  height: 200rpx;
}
.photo-tag {
  height: 250rpx;
  margin-bottom: 60rpx;
}
button{
  width: 260rpx;
  height: 60rpx;
  border-radius: 6rpx;
  background-color: #95C8C0;
  color: #FFFFFF;
  font-size: 12px;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}