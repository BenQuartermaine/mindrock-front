@import '/style/fonts.wxss';
.header {
  margin: 25rpx 0 30rpx 25rpx;

}

.section {
  display: flex;
  flex-direction: column;
  flex: wrap;
  justify-items: center;
  background-color: #F6F6F6;
  border-radius: 10rpx;
  margin: 25rpx;
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.25);
}
.title {
  padding: 20rpx 20rpx 0rpx 20rpx;
}
.wrapper {
  background: #FFFFFF;
  box-shadow: 0px -3px 2px rgba(144, 144, 144, 0.25);
  border-radius: 20px 20px 0px 0px;
  padding: 30rpx;
}
textarea {
  padding: 15rpx 10rpx 0 20rpx;
  width: 96%;
  font-family: 'Gotham';
  font-weight: 300;
  font-style: normal;
  font-size: 22rpx;
}
.content {
  background-color: #FFFFFF;
  height: 400rpx;
}
.summary-tag {
  height: 200rpx;
}
.photo-tag {
  height: 500rpx;
  margin-bottom: 60rpx;
}

button {
  border-radius: 8rpx;
  color:#327383;
  font-size: 12px;
  border: 1rpx solid #327383;
  box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.25);
  text-align:center;
  font-family: 'Gotham';
  font-weight: 600;
  font-style: normal;
  padding-top: 10rpx;
  width: 40vw;
  background: transparent;

}

.submit-btn{
  margin-top: 60rpx;
}
.row{
  display: flex;
  flex-direction: column;
}

image {
  display: flex;
  width:100%;
}

h3{
  display: flex;
  padding: 20rpx;
  font-family: 'Gotham';
  font-size:30rpx;
  font-weight: 300;
  font-style: normal;
}

h1{
  font-size: 48rpx;
  font-family: 'Gotham';
  }
