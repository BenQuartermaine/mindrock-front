.header {
  margin: 10rpx 0 30rpx 25rpx;
}

.section {
  display: flex;
  flex-direction: column; 
  flex: wrap;
  justify-items: center; 
  background-color: #F6F6F6;
  border-radius: 10rpx;
  margin: 25rpx;
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.25);
}
.title {
  padding: 20rpx 20rpx 0rpx 20rpx;
}
textarea {
  padding: 10rpx 10rpx 0 20rpx;
  margin: 0;
  width: 96%;
}
.content {
  background-color: #FFFFFF;
  height: 400rpx;
}
.summary-tag {
  height: 200rpx;
}
.photo-tag {
  height: 350rpx;
  margin-bottom: 60rpx;
}

image {
  width:400rpx;
  height:900rpx;
  position:relative;
  bottom:17px;
  right:-70px;
}
button{
  width: 260rpx;
  height: 60rpx;
  border-radius: 6rpx;
  background-color: #95C8C0;
  color: #FFFFFF;
  font-size: 12px;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}